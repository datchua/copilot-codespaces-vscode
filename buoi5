using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Drawing.Text;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace baibuoi5a
{
    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent();
        }


        private void địnhToolStripMenuItem_Click(object sender, EventArgs e)
        {
            FontDialog fontDlg = new FontDialog();
            fontDlg.ShowColor = true;
            fontDlg.ShowApply = true;
            fontDlg.ShowEffects = true;
            fontDlg.ShowHelp = true;
            if (fontDlg.ShowDialog() != DialogResult.Cancel)
            {
                địnhToolStripMenuItem.ForeColor = fontDlg.Color;
                địnhToolStripMenuItem.Font = fontDlg.Font;
            }
        }


        private void Form1_Load(object sender, EventArgs e)
        {
            
            comboBoxFont.Text = "Tahoma";
            comboBoxSize.Text = "14";
            foreach (FontFamily font in new InstalledFontCollection().Families)
            {
                comboBoxFont.Items.Add(font.Name);
            }
            List<int> listSize = new List<int> { 8, 9, 10, 11, 12, 14, 16, 18, 20, 22, 24, 26, 28, 36, 48, 72 };
            foreach (var s in listSize)
            {
                comboBoxSize.Items.Add(s);
            }

          

        }

        private void toolStripButton1_Click(object sender, EventArgs e)
        {
            richTextBox1.Clear();
            richTextBox1.Font = new Font("Tahoma", 14);
        }

        private void mởTậpTinToolStripMenuItem_Click(object sender, EventArgs e)
        {
            OpenFileDialog openFileDialog = new OpenFileDialog();


            openFileDialog.Filter = "Text Files (*.txt)|*.txt|Rich Text Files (*.rtf)|*.rtf";


            if (openFileDialog.ShowDialog() == DialogResult.OK)
            {
                try
                {

                    string fileExtension = System.IO.Path.GetExtension(openFileDialog.FileName).ToLower();
                    if (fileExtension == ".txt")
                    {
                        mởTậpTinToolStripMenuItem.Text = System.IO.File.ReadAllText(openFileDialog.FileName);
                    }
                    else if (fileExtension == ".rtf")
                    {
                        mởTậpTinToolStripMenuItem.Text = System.IO.File.ReadAllText(openFileDialog.FileName);
                    }
                }
                catch (Exception ex)
                {
                    MessageBox.Show("Lỗi khi mở tập tin: " + ex.Message);
                }
            }
        }

        private bool isFileSaved = false;
        private string filePath = string.Empty;

        private void toolStripButton2_Click(object sender, EventArgs e)
        {
            if (!isFileSaved)
            {

                SaveFileDialog saveFileDialog = new SaveFileDialog();


                saveFileDialog.Filter = "Rich Text Files (*.rtf)|*.rtf";


                if (saveFileDialog.ShowDialog() == DialogResult.OK)
                {
                    try
                    {
                        richTextBox1.SaveFile(saveFileDialog.FileName, RichTextBoxStreamType.RichText);


                        isFileSaved = true;
                        filePath = saveFileDialog.FileName;
                        MessageBox.Show("Lưu văn bản thành công!");
                    }
                    catch (Exception ex)
                    {
                        MessageBox.Show("Lỗi khi lưu văn bản: " + ex.Message);
                    }
                }
            }
            else
            {
                MessageBox.Show("Văn bản đã được lưu thành công!");
            }
        }

        private void lưuNộiDungVănBảnCtrlSToolStripMenuItem_Click(object sender, EventArgs e)
        {
            if (!isFileSaved)
            {

                SaveFileDialog saveFileDialog = new SaveFileDialog();


                saveFileDialog.Filter = "Rich Text Files (*.rtf)|*.rtf";


                if (saveFileDialog.ShowDialog() == DialogResult.OK)
                {
                    try
                    {
                        richTextBox1.SaveFile(saveFileDialog.FileName, RichTextBoxStreamType.RichText);


                        isFileSaved = true;
                        filePath = saveFileDialog.FileName;
                        MessageBox.Show("Lưu văn bản thành công!");
                    }
                    catch (Exception ex)
                    {
                        MessageBox.Show("Lỗi khi lưu văn bản: " + ex.Message);
                    }
                }
            }
            else
            {
                MessageBox.Show("Văn bản đã được lưu thành công!");
            }
        }

        private void tạoVănBảnMớiCtrlNToolStripMenuItem_Click(object sender, EventArgs e)
        {
            richTextBox1.Clear();
            richTextBox1.Font = new Font("Tahoma", 14);
        }

        private void toolStripButton3_Click(object sender, EventArgs e)
        {
            if (richTextBox1.SelectionLength > 0)
            {
                
                if (richTextBox1.SelectionFont.Bold)
                {
                    
                    richTextBox1.SelectionFont = new System.Drawing.Font(richTextBox1.SelectionFont,
                        richTextBox1.SelectionFont.Style & ~System.Drawing.FontStyle.Bold);
                }
                else
                {
                    
                    richTextBox1.SelectionFont = new System.Drawing.Font(richTextBox1.SelectionFont,
                        richTextBox1.SelectionFont.Style | System.Drawing.FontStyle.Bold);
                }
            }
        }

        private void toolStripButton4_Click(object sender, EventArgs e)
        {
            if (richTextBox1.SelectionLength > 0)
            {
               
                if (richTextBox1.SelectionFont.Italic)
                {
                    
                    richTextBox1.SelectionFont = new System.Drawing.Font(richTextBox1.SelectionFont,
                        richTextBox1.SelectionFont.Style & ~System.Drawing.FontStyle.Italic);
                }
                else
                {
                   
                    richTextBox1.SelectionFont = new System.Drawing.Font(richTextBox1.SelectionFont,
                        richTextBox1.SelectionFont.Style | System.Drawing.FontStyle.Italic);
                }
            }
        }

        private void toolStripButton5_Click(object sender, EventArgs e)
        {
            if (richTextBox1.SelectionLength > 0)
            {
                
                if (richTextBox1.SelectionFont.Underline)
                {
                   
                    richTextBox1.SelectionFont = new System.Drawing.Font(richTextBox1.SelectionFont,
                        richTextBox1.SelectionFont.Style & ~System.Drawing.FontStyle.Underline);
                }
                else
                {
                    
                    richTextBox1.SelectionFont = new System.Drawing.Font(richTextBox1.SelectionFont,
                        richTextBox1.SelectionFont.Style | System.Drawing.FontStyle.Underline);
                }
            }
        }

    }
}
    
    

